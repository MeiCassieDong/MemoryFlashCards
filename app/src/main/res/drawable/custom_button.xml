<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#76a4ed"
                android:endColor="#0b5de2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#514c50" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#ede974"
                android:startColor="#e0da2f"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#adac93" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#72ade0"
                android:startColor="#3291e5"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#8f918b" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>